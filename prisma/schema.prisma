generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  role     Role      @default(FREELANCER)
  sessions Session[]

  projectsAsFreelancer Project[] @relation("FreelancerProjects")
  projectsAsClient     Project[] @relation("ClientProjects")

  createdAt DateTime @default(now()) @db.Timestamptz
}

model Project {
  id           Int       @id @default(autoincrement())
  title        String
  description  String
  status       String    @default("Pending")
  freelancer   User?     @relation("FreelancerProjects", fields: [freelancerId], references: [id])
  freelancerId Int?
  client       User?     @relation("ClientProjects", fields: [clientId], references: [id])
  clientId     Int?
  tasks        Task[]
  invoices     Invoice[]
  createdAt    DateTime  @default(now())
}

model Task {
  id        Int       @id @default(autoincrement())
  title     String
  status    String    @default("Pending")
  projectId Int
  project   Project   @relation(fields: [projectId], references: [id])
  timelogs  TimeLog[]
  cretaedAt DateTime  @default(now()) @db.Timestamptz
}

model TimeLog {
  id        Int       @id @default(autoincrement())
  taskId    Int
  task      Task      @relation(fields: [taskId], references: [id])
  startTime DateTime
  endTime   DateTime?
  createdAt DateTime  @default(now()) @db.Timestamptz
}

model Invoice {
  id        Int      @id @default(autoincrement())
  projectId Int
  project   Project  @relation(fields: [projectId], references: [id])
  amount    Float
  status    String   @default("Unpaid")
  createdAt DateTime @default(now()) @db.Timestamptz
}

model Session {
  id     Int    @id @default(autoincrement())
  token  String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}

enum Role {
  FREELANCER
  CLIENT
}
